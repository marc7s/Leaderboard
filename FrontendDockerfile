### BUILD STAGE ###
FROM node:18 AS build

RUN mkdir /usr/src/app
RUN mkdir /usr/src/app/Frontend
RUN mkdir /usr/src/app/Backend
WORKDIR /usr/src/app/Frontend

# Install dependencies
COPY Frontend/package*.json /usr/src/app/Frontend
RUN npm install

# Copy the app and build it
COPY Frontend/ /usr/src/app/Frontend
COPY Backend/src/shared/ /usr/src/app/Backend/src/shared 
RUN npm run build

### RUN STAGE ###
FROM nginx:bookworm
COPY --from=build /usr/src/app/Frontend/dist/leaderboard /usr/share/nginx/html
COPY Frontend/nginx.conf /etc/nginx/conf.d/default.conf